<div class="bs-example">
  <%= form_for @newsletter do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <%= f.submit 'Sign me up',  class: "btn btn-primary" %>
  <% end %>
</div>