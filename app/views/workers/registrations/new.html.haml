%section
  / hire with confidence starts here
  .wrapper
    .container
      .row
        .col-sm-10
          .content-section
            %h1 MBA Sign Up
            %p
              = link_to "Click here", new_company_registration_path
              to sign up as a company
            %p
              = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                = devise_error_messages!
                .form-group
                  .field
                    = f.label :name
                    = f.text_field :name, autofocus: true, class: 'form-control'
                  %br/
                  .field
                    = f.label :zip
                    = f.text_field :zip, class: 'form-control'         
                  %br/
                  .field
                    = f.label :school
                    = f.text_field :school, class: 'form-control'
                  %br/
                  .field
                    = f.label :degree
                    = f.collection_select :degree, Degree.active, :id, :degree
                  %br/
                  .field.select_industries
                    = f.label :industries
                    %br/
                    = f.collection_select :industry_ids, Industry.active, :id, :industry, {}, {:multiple => true}
                  %br/
                  .field
                    = f.label :email
                    = f.email_field :email, class: 'form-control'
                  - if devise_mapping.confirmable? && resource.pending_reconfirmation? 
                    %div
                      Currently waiting confirmation for: 
                      = resource.unconfirmed_email
                  %br/
                  .field
                    = f.label :password
                    = f.password_field :password, autocomplete: "off", class: 'form-control'
                  %br/
                  .field
                    = f.label :password_confirmation
                    = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
                  %br/
                  .actions
                    = f.submit "Submit", class: "btn btn-default"
              = render partial: 'shared/disclaimer_note' 
