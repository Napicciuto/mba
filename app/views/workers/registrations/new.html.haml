%section#interior-section{:role => "main"}
  .wrapper
    .container
      .row
        .col-sm-12
          .content-outer
            .content-left
              %h3 MBA Sign Up
              %p
                = link_to "Company Sign Up", new_company_registration_path 
              %p Lorem ipsum dolor sit amet, consectetur adip iscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea co asd ashaf mmodo consequat.
              %p
                = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                  = devise_error_messages!
                  .form-group
                    .field
                      = f.label :name
                      = f.text_field :name, autofocus: true, placeholder: 'Enter Name', class: 'form-control'
                    %br/
                    .field
                      = f.label :phone
                      = f.text_field :phone, placeholder: 'Enter Phone', class: 'form-control'
                    %br/
                    .field
                      = f.label :address
                      = f.text_field :address, placeholder: 'Enter Address', class: 'form-control'
                    %br/
                    .field
                      = f.label :city
                      = f.text_field :city, placeholder: 'Enter City', class: 'form-control'
                    %br/
                    .field
                      = f.label :state
                      = f.text_field :state, placeholder: 'Enter State', class: 'form-control'
                    %br/
                    .field
                      = f.label :zip
                      = f.text_field :zip, placeholder: 'Enter zip', class: 'form-control'         
                    %br/
                    .field
                      = f.label :school
                      = f.text_field :school, placeholder: 'Enter School', class: 'form-control'
                    %br/
                    .field
                      = f.label :degree
                      = f.text_field :degree, placeholder: 'Enter Degree', class: 'form-control'
                    %br/
                    .field
                      = f.label :industry
                      = f.text_field :industry, placeholder: 'Enter Industry', class: 'form-control'                  
                    %br/
                    .field
                      = f.label :experience
                      = f.text_field :experience, placeholder: 'Enter Experience', class: 'form-control'
                    %br/
                    .field
                      = f.label :experience_year
                      = f.text_field :experience_year, placeholder: 'Enter Experience Year', class: 'form-control'
                    %br/
                    .field
                      = f.label :skills
                      = f.text_area :skills, placeholder: 'Enter Skills', class: 'form-control'
                    %br/
                    .field
                      = f.label :email
                      = f.email_field :email, placeholder: 'Enter Email', class: 'form-control'
                    - if devise_mapping.confirmable? && resource.pending_reconfirmation? 
                      %div
                        Currently waiting confirmation for: 
                        = resource.unconfirmed_email
                    %br/
                    .field
                      = f.label :password
                      = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control'
                    %br/
                    .field
                      = f.label :password_confirmation
                      = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation name', class: 'form-control'
                    %br/
                    .actions
                      = f.submit "Save", class: "btn btn-default"

            .content-right
              .gain
                %a.green_btn{:href => "#"} Gain New Customers
              .find
                %a.green_btn{:href => "#"} Find an MyMBA
              %h4 Buzzworthy Blog
              .block-content-outer
