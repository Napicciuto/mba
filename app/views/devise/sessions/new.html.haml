%section
  / hire with confidence starts here
  .wrapper
    .container
      .row
        .col-sm-10
          .content-section
            %br/
            %br/
            %h2 Log in
            %h4 Sign in with Email and Password
            %p
              = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| 
                = devise_error_messages!
                .form-group
                  .field
                    = f.label :email
                    = f.text_field :email, autofocus: true, placeholder: "Enter Email", class: 'form-control'
                  %br/
                  .field
                    = f.label :password
                    = f.password_field :password, placeholder: "Enter Password", class: 'form-control'
                  %br/
                  .actions
                    = f.submit "Log in", class: "btn btn-default"
                  %br/
                  - if devise_mapping.rememberable?
                    = f.check_box :remember_me
                    = f.label :remember_me
                    %br
                    = link_to "Forgot your password?", new_password_path(resource_name)
